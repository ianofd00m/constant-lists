                  <div style={{ flexShrink: 0, position: 'relative', display: 'flex', justifyContent: 'center', alignItems: 'center', alignSelf: 'center' }}>
                    {(() => {
                      // Get art crop image URL
                      let artCropUrl = null;
                      if (isDoubleFaced && card.card_faces) {
                        const faceIndex = isFlipped ? 1 : 0;
                        const face = card.card_faces[faceIndex];
                        artCropUrl = face?.image_uris?.art_crop;
                      } else {
                        artCropUrl = card.image_uris?.art_crop;
                      }
                      
                      return artCropUrl && (
                        <>
                          <img 
                            src={artCropUrl} 
                            alt={displayName} 
                            style={{ 
                              width: 150, 
                              height: 112, 
                              objectFit: 'cover', 
                              borderRadius: 6,
                              cursor: 'pointer'
                            }}
                            onClick={() => onCardClick(card)}
                          />
                          {isDoubleFaced && (
                            <button
                              onClick={(e) => {
                                e.stopPropagation();
                                handleFlipCard(cardId);
                              }}
                              style={{
                                position: 'absolute',
                                bottom: '4px',
                                left: '50%',
                                transform: 'translateX(-50%)',
                                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                color: 'white',
                                border: 'none',
                                padding: '2px 4px',
                                cursor: 'pointer',
                                borderRadius: '3px',
                                fontSize: '10px',
                                fontWeight: '500',
                                display: 'flex',
                                alignItems: 'center',
                                gap: 2,
                                minWidth: 'fit-content',
                                backdropFilter: 'blur(2px)'
                              }}
                              title={`Flip to ${isFlipped ? 'front' : 'back'} face`}
                            >
                              <TransformIcon size={10} color="white" />
                              Flip
                            </button>
                          )}
                        </>
                      );
                    })()}
                  </div>
                  
                  {/* Card Details */}
                  <div style={{ flex: 1, display: 'flex', flexDirection: 'column', gap: 8, minWidth: 0 }}>
                    {/* Card Name */}
                    <div style={{ marginBottom: 8 }}>
                      <h4 style={{ 
                        margin: 0, 
                        fontSize: 18, 
                        fontWeight: 700, 
                        color: '#1976d2',
                        cursor: 'pointer',
                        textDecoration: 'underline'
                      }} onClick={() => onCardClick(card)}>
                        {displayName}
                      </h4>
                    </div>
                    
                    {/* Mana Cost and Type */}
                    <div style={{ display: 'flex', gap: 16, alignItems: 'center', flexWrap: 'wrap' }}>
                      {/* Mana Cost */}
                      <div style={{ display: 'flex', alignItems: 'center', gap: 4 }}>
                        <span style={{ fontSize: 14, color: '#64748b', fontWeight: 500 }}>Mana:</span>
                        <div style={{ display: 'flex', gap: 1 }}>
                          {isDoubleFaced && card.card_faces ? (
                            <>
                              {(frontManaCost.match(/\{.*?\}/g) || []).map((sym, i) => {
                                let code = sym.replace(/[{}]/g, '').replace(/\//g, '').toUpperCase();
                                return (
                                  <img
                                    key={`front-${i}`}
                                    src={`https://svgs.scryfall.io/card-symbols/${code}.svg`}
                                    alt={code}
                                    style={{ width: 16, height: 16 }}
                                  />
                                );
                              })}
                              {frontManaCost && backManaCost && (
                                <span style={{ margin: '0 4px', fontSize: '12px', color: '#666' }}>//</span>
                              )}
                              {(backManaCost.match(/\{.*?\}/g) || []).map((sym, i) => {
                                let code = sym.replace(/[{}]/g, '').replace(/\//g, '').toUpperCase();
                                return (
                                  <img
                                    key={`back-${i}`}
                                    src={`https://svgs.scryfall.io/card-symbols/${code}.svg`}
                                    alt={code}
                                    style={{ width: 16, height: 16 }}
                                  />
                                );
                              })}
                            </>
                          ) : (
                            (frontManaCost.match(/\{.*?\}/g) || []).map((sym, i) => {
                              let code = sym.replace(/[{}]/g, '').replace(/\//g, '').toUpperCase();
                              return (
                                <img
                                  key={i}
                                  src={`https://svgs.scryfall.io/card-symbols/${code}.svg`}
                                  alt={code}
                                  style={{ width: 16, height: 16 }}
                                />
                              );
                            })
                          )}
                          {!frontManaCost && <span style={{ fontSize: 14, color: '#94a3b8' }}>â€”</span>}
                        </div>
                      </div>
                      
                      {/* Type */}
                      <div style={{ display: 'flex', alignItems: 'center', gap: 4 }}>
                        <span style={{ fontSize: 14, color: '#64748b', fontWeight: 500 }}>Type:</span>
                        <div style={{ display: 'flex', alignItems: 'center', gap: 4 }}>
                          <TypeIcon typeLine={typeDisplay} size={14} />
                          <span style={{ fontSize: 14, color: '#334155' }}>{typeDisplay || 'â€”'}</span>
                        </div>
                      </div>
                    </div>
                    
                    {/* Oracle Text */}
                    {oracleText && (
                      <div style={{ marginTop: 4 }}>
                        <div style={{ 
                          fontSize: 13, 
                          color: '#475569', 
                          lineHeight: 1.4,
                          wordWrap: 'break-word',
                          whiteSpace: 'pre-wrap'
                        }}>
                          {renderOracleTextWithSymbols(oracleText)}
                        </div>
                      </div>
                    )}
                    
                    {/* Action Buttons and Price */}
                    <div style={{ display: 'flex', alignItems: 'center', gap: 8, marginTop: 'auto', flexWrap: 'wrap' }}>
                      <button
                        onClick={() => addToShoppingCart(card)}
                        style={{
                          backgroundColor: '#059669',
                          color: 'white',
                          border: 'none',
                          padding: '6px 12px',
                          borderRadius: '4px',
                          fontSize: '12px',
                          fontWeight: '500',
                          cursor: 'pointer',
                          textAlign: 'center',
                          maxWidth: '100px',
                          minWidth: '60px',
                          width: 'fit-content',
                          whiteSpace: 'nowrap'
                        }}
                        title="Add to Shopping Cart"
                      >
                        Cart
                      </button>
                      <button
                        onClick={() => {
                          // Add to wishlist functionality - placeholder for now
                          toast.success(`Added ${card.name} to wishlist!`);
                        }}
                        style={{
                          backgroundColor: '#f59e0b',
                          color: 'white',
                          border: 'none',
                          padding: '6px 12px',
                          borderRadius: '4px',
                          fontSize: '12px',
